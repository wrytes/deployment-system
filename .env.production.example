# Application
NODE_ENV=production
PORT=3000
API_KEY_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=deployment_platform
DATABASE_URL=postgresql://postgres:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/deployment_platform?schema=public

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Docker
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_SWARM_ADVERTISE_ADDR=YOUR_SERVER_IP
NGINX_CONTAINER_NAME=nginx_proxy

# Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_WEBHOOK_DOMAIN=your-domain.com
TELEGRAM_WEBHOOK_PATH=/telegram/webhook

# Let's Encrypt
LETSENCRYPT_EMAIL=your-email@example.com
LETSENCRYPT_STAGING=false

# Claude Code
CLAUDE_CODE_IMAGE=claude-code:latest
CLAUDE_CODE_DEFAULT_CPU_LIMIT=2.0
CLAUDE_CODE_DEFAULT_MEMORY_LIMIT=4294967296
CLAUDE_SESSION_IDLE_TIMEOUT=3600000
CLAUDE_SESSION_AUTO_CLEANUP_DAYS=7

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx
API_KEY_ENCRYPTION_SECRET=CHANGE_THIS_TO_A_SECURE_32_CHARACTER_SECRET

# Logging
LOG_LEVEL=info
LOG_PRETTY=false

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
