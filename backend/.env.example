# Application
NODE_ENV=production
PORT=3030
API_KEY_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=deployment_system
DATABASE_URL=postgresql://postgres:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/deployment_system?schema=public

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Docker
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_SWARM_ADVERTISE_ADDR=YOUR_SERVER_IP
NGINX_CONTAINER_NAME=deployment_system_nginx_proxy

# Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_WEBHOOK_DOMAIN=your-domain.com
TELEGRAM_WEBHOOK_PATH=/telegram/webhook

# Let's Encrypt
LETSENCRYPT_EMAIL=email@example.com
LETSENCRYPT_HOST=localhost
VIRTUAL_HOST=localhost
VIRTUAL_PORT=3030

# Logging
LOG_LEVEL=info
LOG_PRETTY=false

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Startup Recovery
# Automatically restart running deployments on backend startup
ENABLE_DEPLOYMENT_RECOVERY=true
