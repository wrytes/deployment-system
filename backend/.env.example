# Application
NODE_ENV=development
PORT=3000
API_KEY_SECRET=your-secret-key-at-least-32-characters-long

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/deployment_platform?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Docker
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_SWARM_ADVERTISE_ADDR=
NGINX_CONTAINER_NAME=nginx_proxy

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_DOMAIN=
TELEGRAM_WEBHOOK_PATH=/telegram/webhook

# Let's Encrypt
LETSENCRYPT_EMAIL=your-email@example.com
LETSENCRYPT_STAGING=true

# Claude Code
CLAUDE_CODE_IMAGE=claude-code:latest
CLAUDE_CODE_DEFAULT_CPU_LIMIT=2.0
CLAUDE_CODE_DEFAULT_MEMORY_LIMIT=4294967296
CLAUDE_SESSION_IDLE_TIMEOUT=3600000
CLAUDE_SESSION_AUTO_CLEANUP_DAYS=7

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx
API_KEY_ENCRYPTION_SECRET=your-32-character-secret-for-encryption-here

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
