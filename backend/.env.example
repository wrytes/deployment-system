# Application
NODE_ENV=development
PORT=3030
API_KEY_SECRET=your-secret-key-at-least-32-characters-long

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/deployment_platform?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Docker
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_SWARM_ADVERTISE_ADDR=
NGINX_CONTAINER_NAME=nginx_proxy

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_DOMAIN=
TELEGRAM_WEBHOOK_PATH=/telegram/webhook

# Let's Encrypt
LETSENCRYPT_EMAIL=email@example.com
LETSENCRYPT_HOST=localhost
VIRTUAL_HOST=localhost
VIRTUAL_PORT=3030

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
